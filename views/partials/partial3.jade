.container
  .row-fluid
    .col-md-12
      .col-md-6
        .area
          form.form-horizontal(action='', method='POST')
            fieldset#legend
            div.legend Login
            div.control-group
              Username 
              label.control-label(for='username') Username
            div.controls
              input#username.input-xlarge(type='text', name='username', placeholder='', data-ng-model="usernameModel")
            div.control-group
              Password
              label.control-label(for='password') Password
            div.controls
              input#password.input-xlarge(type='password', name='password', placeholder='', data-ng-model="passwordModel")
            .control-group
              .controls
                label.checkbox
                  input(type='checkbox')
                  | Keep me signed in
                a.btn.btn-link(href='#') Forgot my password!
            div.control-group
              button#loginButton.btn.btn-success(data-ng-click='login(usernameModel,passwordModel)') Login
            //- .alert.alert-error
            //-   button.close(type='button', data-dismiss='alert') ×
            //-   strong Access Denied!
            //-   | Please provide valid authorization.
      .col-md-6
        .area
          form.form-horizontal
            .heading
              h4.form-heading Sign Up
              label.control-label(for='inputEmail') Email
              .controls
                input#inputEmail(type='text', placeholder='email@example.com')
            .control-group
              label.control-label(for='inputUser') Username
              .controls
                input#inputUser(type='text', placeholder='username')
            .control-group
              label.control-label(for='inputPassword') Password
              .controls
                input#inputPassword(type='password', placeholder='Min. 8 Characters')
            .control-group
              .controls
                label.checkbox
                  input(type='checkbox')
                  | I agree all your 
                  a(href='#') Terms of Services
                button.btn.btn-success(data-ng-click='newUser(usernameModel,passwordModel)') Sign Up
